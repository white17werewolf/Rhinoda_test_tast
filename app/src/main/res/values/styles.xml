<resources xmlns:tools="http://schemas.android.com/tools">
    
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    
    <style name="TextView.Name">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginTop">18dp</item>
        <item name="android:textColor">@color/colorViolet</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textSize">25dp</item>
    </style>

    <style name="TextView.Date">
        <item name="android:textColor">@color/colorLightGrey</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="TextView.Post">
        <item name="android:textColor">@color/colorDarkBlue</item>
        <item name="android:textSize">30dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="TextView.LikesMan">
        <item name="android:textColor">@color/colorViolet</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="TextView.Numbers">
        <item name="android:textColor">@color/colorViolet</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="ImageViewLikesMan">
        <item name="android:layout_height">15dp</item>
        <item name="android:layout_width">15dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="ImageViewLikes">
        <item name="android:layout_height">15dp</item>
        <item name="android:layout_width">15dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="TextView.ProfileNumbers">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextView.ProfileDescription">
        <item name="android:textColor">@color/colorLightGrey</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_height">15dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_width">15dp</item>
        <item name="android:textSize">10dp</item>
    </style>

    <style name="Button">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@color/colorViolet</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_height">15dp</item>
        <item name="android:layout_width">15dp</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="LinearLayoutNumbers">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="Icons">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:tint">@color/colorViolet</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

</resources>
