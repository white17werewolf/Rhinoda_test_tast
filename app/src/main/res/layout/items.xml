<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        style="@style/ImageViewAvatar"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name"
        style="@style/TextView.Name"
        android:text="Name Surname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/icon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Date"
        style="@style/TextView.Date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/icon"
        app:layout_constraintTop_toBottomOf="@+id/name" />

    <TextView
        android:id="@+id/post"
        style="@style/TextView.Post"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Post"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/icon" />

    <ImageView
        android:id="@+id/imgPost"
        style="@style/ImageView"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/post"
        tools:srcCompat="@tools:sample/avatars[14]" />

    <ImageView
        android:id="@+id/imgLikesMan"
        style="@style/ImageViewLikesMan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgPost"
        app:srcCompat="@drawable/ic_person_outline_black_24dp" />

    <TextView
        android:id="@+id/txtLikesMan"
        style="@style/TextView.LikesMan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Likers"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgLikesMan"
        app:layout_constraintTop_toBottomOf="@+id/imgPost" />

    <ImageView
        style="@style/ImageViewLikesMan"
        android:id="@+id/imgLikes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtLikesMan"
        app:srcCompat="@drawable/ic_filter_vintage_black_24dp" />

    <TextView

        android:id="@+id/txtLikes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        style="@style/TextView.Numbers"
        app:layout_constraintStart_toEndOf="@+id/imgLikes"
        app:layout_constraintTop_toBottomOf="@+id/txtLikesMan" />

    <ImageView
        style="@style/ImageViewLikesMan"
        android:id="@+id/imgComments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/txtLikes"
        app:layout_constraintTop_toBottomOf="@+id/txtLikesMan"
        app:srcCompat="@drawable/ic_comment_black_24dp" />

    <TextView
        android:id="@+id/txtComments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        style="@style/TextView.Numbers"
        app:layout_constraintStart_toEndOf="@+id/imgComments"
        app:layout_constraintTop_toBottomOf="@+id/txtLikesMan" />

    <ImageView
        style="@style/ImageViewLikesMan"
        android:id="@+id/imgShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/txtComments"
        app:layout_constraintTop_toBottomOf="@+id/txtLikesMan"
        app:srcCompat="@drawable/ic_share_black_24dp" />


</androidx.constraintlayout.widget.ConstraintLayout>